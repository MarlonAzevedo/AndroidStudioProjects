<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="radiobutton.studio.com.radiobuttom.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Qual a sua comida favorita?"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/radioButtonIdLazanha"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="@+id/radioButtonIdLazanha" />

    <Button
        android:id="@+id/buttonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escolher"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/radioButtonIdMacarrao"
        android:layout_marginTop="182dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/radioButtonIdMacarrao" />

    <TextView
        android:id="@+id/textViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/buttonId"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonId"
        app:layout_constraintLeft_toLeftOf="@+id/buttonId" />

    <RadioGroup
        android:id="@+id/radioGroupId"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/buttonId"
        app:layout_constraintRight_toRightOf="@+id/textView"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView">

        <RadioButton
            android:id="@+id/radioButtonIdLazanha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lazanha"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="42dp" />

        <RadioButton
            android:id="@+id/radioButtonIdParmediana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Parmediana"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="74dp" />

        <RadioButton
            android:id="@+id/radioButtonIdMacarrao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MacarrÃ£o"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="276dp" />
    </RadioGroup>
</android.support.constraint.ConstraintLayout>
