<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="adivinha.studio.com.adivinha.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="368dp"
        android:layout_height="117dp"
        android:layout_marginTop="16dp"
        android:text="Escolha um numero de 0 a 10"
        android:textSize="@dimen/cabecalho_texto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/botaoJogarId"
        android:layout_width="368dp"
        android:layout_height="118dp"
        android:layout_marginTop="114dp"
        android:text="@string/botao_jogar"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/textView" />

    <TextView
        android:id="@+id/resultadoid"
        android:layout_width="368dp"
        android:layout_height="118dp"
        android:text="@string/texto_numero"
        android:textSize="@dimen/cabecalho_texto"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/botaoJogarId"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.598"
        app:layout_constraintRight_toRightOf="@+id/botaoJogarId" />

    <Button
        android:id="@+id/button2"
        android:layout_width="368dp"
        android:layout_height="118dp"
        android:text="LIMPAR"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@+id/botaoJogarId"
        app:layout_constraintLeft_toLeftOf="@+id/resultadoid"
        app:layout_constraintRight_toRightOf="@+id/resultadoid" />
</android.support.constraint.ConstraintLayout>
